{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": [
      "ES2023",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleDetection": "force",
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    /* JSON */
    "resolveJsonModule": true,
    "allowJs": true,
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/exports.json",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
